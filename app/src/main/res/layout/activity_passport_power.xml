<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PassportPowerActivity">

    <ImageView
            android:id="@+id/category_image_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/world_map_png_background_image_2__1_"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:focusable="false"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visa Free"
            android:textSize="28sp"
            android:layout_margin="40sp"
            android:padding="20sp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visa on arrival"
            android:textSize="28sp"
            android:layout_margin="40sp"
            android:padding="20sp"
            android:background="@drawable/btn_rounded_primary_select"
            android:backgroundTintMode="multiply"
            android:backgroundTint="@android:color/white"

            />
        <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Visa required"
        android:textSize="28sp"
        android:layout_margin="40sp"
        android:padding="20sp"
        android:background="@drawable/btn_rounded_primary"
        />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>